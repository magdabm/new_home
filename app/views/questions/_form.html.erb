<div class="container" align="center">

  <h4><b>Ask a question:<b></h4>

  <%= render 'common/errors', model: @question %>

  <%= simple_form_for [@offer, @question] do |f| %>
    <p>
      <%= f.input :content, label: 'Question', as: :text, input_html: { style: 'height: 120px' } %><br>
    </p>
    <p>
      <% if current_user %>
        <%= f.input :nick, label: 'Your nick', placeholder: current_user.email %><br>
      <% else %>
        <%= f.input :nick, label: 'Your nick' %><br>
      <% end %>
    </p>
    <p>
      <%= f.button :submit, class: "btn btn-success"%>
    </p>
  <% end %>
</div>
